# Example Terraform variables file
# Copy this file to terraform.tfvars and fill in your values
# DO NOT commit terraform.tfvars to git (it's in .gitignore)

aws_region  = "us-east-1"
environment = "prod"

# EC2 Configuration
instance_type      = "t2.micro" # Free tier eligible
root_volume_size   = 20
use_elastic_ip     = true
enable_detailed_monitoring = false

# GitHub Actions SSH Public Key
# Generate with: ssh-keygen -t ed25519 -C "github-actions-deploy" -f ~/.ssh/github_actions_ed25519 -N ""
# Then paste the contents of ~/.ssh/github_actions_ed25519.pub below
github_actions_public_key = "ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX github-actions-deploy"

# SSH Security
# Restrict to specific IPs for better security, or use 0.0.0.0/0 for access from anywhere
ssh_allowed_ips = [
  "0.0.0.0/0" # Allow from anywhere (change this to your IP for better security)
]
